<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow HTTPS connections (default behavior, but explicit for clarity) -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>
    
    <!-- Allow cleartext traffic for localhost development (http://10.0.2.2) -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
    </domain-config>
    
    <!-- Allow HTTPS connections to Render -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">foodyz-backend.onrender.com</domain>
    </domain-config>
</network-security-config>

