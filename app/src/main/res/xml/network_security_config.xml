<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Configuration pour toutes les connexions -->
    <!-- HTTPS is allowed by default, HTTP (cleartext) is allowed for local development -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>

    <!-- Configuration pour Render (Production) - HTTPS -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">onrender.com</domain>
        <!-- Add your specific Render domain here if needed -->
        <!-- Example: <domain includeSubdomains="true">your-app-name.onrender.com</domain> -->
    </domain-config>

    <!-- Configuration spécifique pour développement local (HTTP) -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">192.168.1.7</domain>
        <domain includeSubdomains="true">192.168.0.0</domain>
        <domain includeSubdomains="true">172.20.10.2</domain>
        <domain includeSubdomains="true">172.20.0.0</domain>
        <domain includeSubdomains="true">172.16.0.109</domain>
        <domain includeSubdomains="true">172.16.0.0</domain>
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">192.168.1.103</domain>
    </domain-config>
</network-security-config>


